05 REM SIMPLE STEREO FM TUNER USING RDA5807FP
07 REM ENTER DESIRED FREQUENCY WITH ONE DECIMAL POINT
10 INPUT "ENTER THE FREQUENCY TO TUNE (87~108) :" ,FREQ
20 INPUT "ENTER THE DESIRED VOLUME TO SET(0~15):" ,VOLU
30 FREQH = (FREQ*10-870)/4
40 FREQL = ((((FREQ*10-870).AND.3)*64).OR.010H)
50 I2CSTART
60 I2CPUT (20H)
70 I2CPUT (0D0H)  : I2CPUT (05H)
80 I2CPUT (FREQH) : I2CPUT (FREQL)
90 I2CPUT (04H)   : I2CPUT (00H)
100 I2CPUT (088H) : I2CPUT (0B0H.OR.(VOLU.AND.0FH))
110 
120 I2CSTOP
130 PRINT : PRINT : PRINT
140 GOTO 10
150 END
