005 REM RDA5807FP I2C FM TUNER 
007 REM WITH CHANNEL AND VOLUME ADJUSTMENT
008 REM USE - for CH- and + for CH+
009 REM USE 1 for VOLUME- and 2 for VOLUME+
10  FREQ = 91.9
20  VOLU = 7
50 I2CSTART
60 I2CPUT (20H)
70 I2CPUT (0D0H)  : I2CPUT (05H)
80 I2CPUT ((FREQ*10-870)/4) : I2CPUT ((((FREQ*10-870).AND.3)*64).OR.010H)
90 I2CPUT (08H)   : I2CPUT (00H)
100 I2CPUT (088H) : I2CPUT (0B0H.OR.(VOLU.AND.0FH))
110 I2CSTOP
120 X=GET
130 IF X= 45 THEN SEEK = 0C1H : GOSUB 1000
140 IF X= 61 THEN SEEK = 0C3H : GOSUB 1000
150 IF (X= 49).AND.(VOLU>0) THEN VOLU = VOLU-1 : GOSUB 2000
160 IF (X= 50).AND.(VOLU<15) THEN VOLU = VOLU+1 : GOSUB 2000
180 GOTO 120
1000 I2CSTART
1100 I2CPUT (20H)
1200 I2CPUT (SEEK)  : I2CPUT (01H)
1300 I2CSTOP
1400 RETURN
2000 I2CSTART
2100 I2CPUT (22H)
2200 I2CPUT (05H) 
2300 I2CPUT (088H) : I2CPUT (0B0H.OR.(VOLU.AND.0FH))
2400 I2CSTOP
2500 PRINT VOLU,CR,
2600 RETURN
